<div class="body_heading_gap">
  <h1>Your Search Results</h1>
</div>
<% if @recipes.present? %>
  <% @recipes.each do |recipe| %>
  <div>
    <p><%= link_to recipe.name, recipe_path( recipe.id ) %></p>
    <p><%= link_to (cl_image_tag recipe.image, :class => 'thumb'), recipe_path( recipe.id ) %></p>
    <p>Serves - <%= recipe.servings %></p>
    <p>Preparation Time - <%= recipe.preparation_time %> mins</p>
    <% if recipe.category.present? %>
      <p>Category - <%= recipe.category.recipe_type %></p>
      <% end %>

    <p>_________________________  <p>
      <br />
  </div>
  <% end %>
<% else %>
    <p style="text-align:center;">sorry, there are no posts containing <%= params[:search] %>.<br />
    <img src="/assets/food_question.jpg" /></p>
<% end %>
