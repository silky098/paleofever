<h1>Recipe Index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<nav>
    <%= link_to 'Add New Recipe', new_recipe_path,  :class =>'link'  %>
</nav>
<p><%= render :partial => 'categories' %></p>

<% @recipes.each do |recipe| %>
<div>
  <p><%= link_to recipe.name, recipe_path( recipe.id ) %></p>
  <p><%= cl_image_tag recipe.image, :class =>'thumb' %></p>
  <p>Serves - <%= recipe.servings %></p>
  <p>Preparation Time - <%= recipe.preparation_time %> mins</p>
  <p>_________________________  <p>
    <br />
</div>
<% end %>
