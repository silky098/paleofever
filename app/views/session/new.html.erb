<div class="body_heading_gap">
  <h1>Login</h1>
</div>
<h1>Login</h1>

<% if flash[:message].present? %>
  <p><%= flash[:message] %></p>
<% end %>

<%= form_tag login_path do %>
<%= label_tag :email %>
<%= email_field_tag :email %>

<%= label_tag :password %>
<%= password_field_tag :password %>

<%= submit_tag 'Log in' %>
<% end %>
